.bry_instructor_content {
	background-color: #059fbf;
	padding-bottom: 34px;
}
.bry_instructor_path {
	font-size: 14px;
	color: #fff;
	padding: 28px 20px;
	background: url(../../assets/icon/bry_encyc/bry_encyc_home.png) no-repeat left;
}
.bry_instructor_main {
	padding: 34px 28px 36px 52px;
	background-color: #efefef;
	border-radius: 5px;
}
.bry_instructor_main > .fl {
	width: 920px;
}
/* 人物简介 */
.bry_instructor_chara_intro {
	position: relative;
	text-align: center;
	font-size: 14px;
	color: #333;
	margin-top: 26px;
}
.bry_instructor_chara_intro > div {
	display: inline-block;
}
.bry_instructor_chara_pic img {
	width: 192px;
	height: 206px;
	border-radius: 6px;
	margin-bottom: 10px;
}
.bry_instructor_chara_msg {
	position: absolute;
	text-align: left;
	font-size: 12px;
	line-height: 20px;
	color: #666;
	bottom: 30px;
	left: 566px;
}
/* 教学经历 */
.bry_instructor_teach,
.bry_instructor_posion{
	font-size: 12px;
	color: #333;
	text-indent: 2em;
	line-height: 22px;
	padding-top: 30px;
}
.bry_instructor_teach_title,
.bry_instructor_posion_title{
	width: 140px;
	line-height: 42px;
	text-align: center;
	font-size: 16px;
	color: #fff;
	background-color: #059fbf;
	border-radius: 5px;
	margin-bottom: 8px;
	text-indent: 0;
}
.bry_instructor_main > .fr {
	width: 230px;
}
.bry_instructor_headpic {
	text-align: center;
	padding-right: 22px;
}
.bry_instructor_headpic img {
	display: inline-block;
	width: 112px;
	height: 112px;
	border-radius: 50%;
}
.bry_instructor_name {
	text-align: center;
	font-size: 14px;
	color: #333;
	margin-top: 8px;
	padding-right: 22px;
}
.bry_instructor_data {
	padding: 0 58px 0 24px;
	font-size: 12px;
	color: #666;
	line-height: 30px;
	margin-top: 8px;
}
.bry_instructor_data span {
	float: right;
}
.bry_instructor_teach_exper {
	line-height: 42px;
	text-align: center;
	font-size: 16px;
	color: #fff;
	background-color: #059fbf;
	border-radius: 5px;
	margin: 32px 0 18px;
}
.bry_instructor_main > .fr > p {
	font-size: 12px;
	color: #666;
	line-height: 18px;
}
.bry_instructor_main > .fr > p:nth-of-type(1) {
	margin-bottom: 12px;
}