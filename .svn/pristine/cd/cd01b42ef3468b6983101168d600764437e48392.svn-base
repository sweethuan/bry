.bry_main {
	position: relative;
}

.bry_forum_path {
	font-size: 14px;
	color: #fff;
	padding: 28px 20px;
	background: url(../../assets/icon/bry_encyc/bry_encyc_home.png) no-repeat left;
}

.bry_forum_path a,.bry_forum_path a:hover{
	color: #fff;
}

.bry_inner {
	background: transparent;
}

.bry_people_pic>span {
	background: white;
	color: #059fbf;
}
.bry_people>span {
	color: white;
}
.bry_authentication_recharge>span {
	color: white;
}

/* 标题 */
.bry_title {
	position: relative;
	padding-left: 70px;
	margin-bottom: 16px;
}

.bry_title>span {
	font-size: 14px;
	color: white;
	position: absolute;
	left: 0px;
	top: 12px;
	display: block;
	width: 5em;
	text-align: right;
}
.bry_title>input {
	width: 1000px;
	height: 46px;
	border-radius: 6px;
	padding-left: 10px;
	box-sizing: border-box;
}

/* 内容 */
.bry_content {
	position: relative;
	padding-left: 70px;
}

.bry_content>span {
	font-size: 14px;
	color: white;
	position: absolute;
	left: 0px;
	top: 12px;
	display: block;
	width: 5em;
	text-align: right;
}

.bry_content>div {
	border-radius: 6px;
	width: 1000px;
	position: relative;
}

.bry_content_login {
	width: 524px;
	height: 92px;
	border: 1px solid #059fbf;
	font-size: 14px;
	color: #333333;
	position: absolute;
	bottom: 20px;
	right: 20px;
	border-radius: 5px;
}
.bry_content_login>p {
	text-align: center;
	margin-top: 5px;
}
.bry_content_login_QQ {
	width: 110px;
	height: 38px;
	border-radius: 5px;
	border: none;
	outline: none;
	cursor: pointer;
	color: white;
	box-sizing: border-box;
	padding-left: 26px;
	background: url(../../assets/icon/bry_content_login_QQ.png) no-repeat left 10px center;
	background-color: #059fbf;
	position: absolute;
	bottom: 15px;
	left: 100px;
}
.bry_content_login_wx {
	width: 110px;
	height: 38px;
	border-radius: 5px;
	border: none;
	outline: none;
	cursor: pointer;
	color: white;
	padding-left: 28px;
	background: url(../../assets/icon/bry_content_login_wx.png) no-repeat left 8px center;
	background-color: #00cb55;
	position: absolute;
	bottom: 15px;
	left: 300px;
}

/* 发帖按钮 */
.bry_send {
	width: 444px;
	height: 54px;
	background: #fc9440;
	border-radius: 5px;
	font-size: 24px;
	color: white;
	border: none;
	outline: none;
	text-indent: 15px;
	letter-spacing: 15px;
	margin-top: 50px;
	margin-left: 350px;
}