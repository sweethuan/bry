									<img class="fl" :src="item.ListPhoto">
									<div>
										<div class="bry_video_choice_name">《{{item.Title}}》</div>
										<div class="bry_video_choice_total">全{{item.FileCount}}集</div>
										<div class="bry_video_lable">
											<span>播放量 {{item.QueryCount}}</span>
										</div>
									</div>
