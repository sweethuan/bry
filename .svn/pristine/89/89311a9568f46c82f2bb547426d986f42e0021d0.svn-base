	<script type="text/JavaScript" charset="UTF-8">
		var vueobj = new Vue({
			el: '#app',
			data(){
				return{
					username:"",//  用户昵称
					RoleId: '',     // 角色id
					isLoading: false, //判断上传进度条遮罩是否出现
					topNav:[
						{ type: '电影', typeId: 12 },
						{ type: '纪录片', typeId: 13 },
						{ type: '动漫', typeId: 14 },
						{ type: '儿童', typeId: 15 },
						{ type: '中学', typeId: 16 },
						{ type: '大学', typeId: 17 },
						{ type: '成人', typeId: 18 },
						{ type: '专题', typeId: 19 },
						{ type: '大讲堂', typeId:20 },
						{ type: '活动', typeId: 21 },
					], //类型列表
					topNum:"" , //类型判断数据
					videoName:"",//视频名称
					payMes:[{
						names: "否",
						isPay: false
					},{
						names: "是",
						isPay: true
					}], //判断是否收费信息
					payPrice:"false" ,//判断是否收费
					money:0 ,// 收费金额默认是0.00
					isDisabled:true, //判断disabled
					details:'',//简介
					content:'',//详情内容
					showImg:'',//显示图片
					imgArr:'', //图片路径
					videoArr:'',//视频路径
					bry_comtitle:[{
						names: "性教育",
						namesId: 7
					},{
						names: "性健康",
						namesId: 8
					},{
						names: "性心理",
						namesId: 9
					},{
						names: "性医学",
						namesId: 10
					}] , //视频标签
					bry_comtitleList:[]  ,//视频标签点击下标
					StartDate:"", //上架时间
					EndDate: "",  //下架时间
					bry_comwid:["否","推送"],
					bry_comwidNum:0,//是否推送的判断数据
					FileList:[{
						Title:'', //标题
						FilePath :'', //文件路径
						Background:'', //背景图
						}],
					isAuth: '',  // 是否认证
				}
			},
			//获取昵称
			created() {
				const that=this
				var userId=foowwLocalStorage.getLocal("urseId")
				this.RoleId = foowwLocalStorage.getLocal("RoleId")
				// 取出本地数据给data里的赋值
				console.log(userId)
				//ajax请求昵称
				getAjax("get","Users/DetailDo",'{"UserId":"' + userId + '"}').then(res=>{
					that.username=res.data.NickName
					that.isAuth = res.data.IsAuth
					console.log(res.data.NickName)
				},err=>{
					console.log(err)
				})
			},
			computed: {
				comClass(){
					return this.RoleId == 1 ? "个人" : this.RoleId == 2 ? "学生" : this.RoleId == 3 ? "讲师" : this.RoleId == 4 ? "医师" : this.RoleId == 5 ? "心里资讯师" : "机构"
				}
			},
			methods:{
				beforeAvatarUpload(file) {
					 const fileSuffix = file.name.substring(file.name.lastIndexOf(".") + 1);
					  const extension1 = fileSuffix === "mp4";
					  const extension2 = fileSuffix === "mpg";
					  const extension3 = fileSuffix === "AVI";
					  const extension4 = fileSuffix === "flv";
					 
					  if (!extension1 && !extension2 && !extension3 && !extension4) {
							$(".el-upload-list").remove()
							setTimeout(() => {
								window.location.reload()
							}, 1500)
							return this.$message({
								message: '上传文件只能是 .mp4,.mpg,.AVI,.flv',
								type: 'warning',
								offset: 250
							})
					  }
					this.isLoading = true
					return extension1 || extension2 || extension3 || extension4 
				},
				onSuccess(response, file, fileList) {
					this.FileList[0].FilePath = response.data
					this.isLoading = false
				},
				 
				handleExceed(files, fileList) {
					
					this.$message.warning(`当前限制选择 1 个文件，本次选择了 ${files.length} 个文件，共选择了 ${files.length + fileList.length} 个文件`);
				},
				// 勾选上传类型
				checkType(index){
					let that=this
					that.topNum=that.topNav[index].typeId
				},
				// 判断是否收费
				// payMoney(index){
				// 	let that=this
				// 	if (index==0) {
				// 		that.money=0
				// 		that.isDisabled = true
				// 	}else {
				// 		that.isDisabled = false
				// 	}
					
				// 	that.payPrice=index
				// 	console.log(that.payPrice)    
				// },
				// 判断是否收费
				payMoney(index){
					let that=this
					if (index==0) {
						that.money=0
						that.isDisabled = true
					}else {
						that.isDisabled = false
					}
				},
				// 判断是否推送
				comwid(index){
					let that =this
					that.bry_comwidNum=index
					console.log(that.bry_comwidNum)
				},
				// 上传图片
				getFile(event) {
					var file = event.target.files; //获取图片的所有信息
					console.log(file)
					let that = this;
					for (var i = 0; i < file.length; i++) {
						// 上传类型判断
						var imgName = file[i].name;
						var idx = imgName.lastIndexOf(".");
						console.log(idx)
						if (idx != -1) {
							var ext = imgName.substr(idx + 1).toUpperCase();//获取图片格式
							console.log(ext)
							ext = ext.toLowerCase();
							if (
								ext != "jpg" &&
								ext != "png" &&
								ext != "bmp" &&
								ext != "gif"
							) {
								return this.$message({
									message: '图片格式不支持~',
									type: 'warning',
									offset: 250
								})
							} else {
								that.imgArr = file[i];
								// console.log(that.imgArr)
								
							}
						} else {}
						//展示上传的图片
						console.log("-------------------------")
						let reader = new FileReader();
						
						reader.readAsDataURL(file[i]);
						
						reader.onload = function(e) {
							that.showImg=this.result
							// console.log("base64:"+that.imgArr)
							console.log("base64:" +this.result)
							// 将图片转码的base64传入通用类接口  返回的图片地址传给imgArr
							ajax("post","Users/UploadPhotoByBase64Do",'{"base64":"' + this.result + '"}',"123456").then(res=>{

								console.log(res.data)
								that.imgArr=res.data
								console.log(that.imgArr)
							},err=>{
								console.log(err)
							})
							
						};
					}
				},
				// 删除图片
				del() {
					this.showImg = ""
						this.imgArr = ""
						this.$refs.picFile.value = ""
				},
				// 上传视频
			
				//上传数据
				uploadData(){
					let that=this
					console.log("------------------------")
					console.log("视频分类："+that.topNum)
					console.log("视频名称"+that.videoName)
					console.log("是否收费"+that.payPrice)
					console.log("收费金额"+that.money)
					console.log("图片路径"+that.imgArr)
					console.log("视频标签"+that.bry_comtitleList)
					console.log("上架时间："+that.StartDate)
					console.log("下架时间"+that.EndDate)
					console.log("视频文件"+that.videoArr)
					console.log("是否推送"+that.bry_comwidNum)
					
					console.log("------------------------")
					this.dealData()
					this.checkForm()
					
				},
				// 处理数据
				 dealData (){
					let that=this
					// 处理时间
					var SD = new Date(that.StartDate); 
					//console.log(SD.getTime()) 
					
					var ED = new Date(that.EndDate);
					//console.log(ED.getTime())
				
					that.StartDate = SD.getFullYear() + '-' + (SD.getMonth() + 1) + '-' + SD.getDate() + ' ' + SD.getHours() + ':' + SD.getMinutes() + ':' + SD.getSeconds(); 
					that.EndDate = ED.getFullYear() + '-' + (ED.getMonth() + 1) + '-' + ED.getDate() + ' ' + ED.getHours() + ':' + ED.getMinutes() + ':' + ED.getSeconds(); 
				},
				// 表单验证
				checkForm() {
					let that = this
					if(!this.topNum) {
						return this.$message({
							message: '请选择视频分类~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.videoName.trim()) {
						return this.$message({
							message: '请填写视频名称~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.imgArr) {
						return this.$message({
							message: '请选择视频封面~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.bry_comtitleList.length) {
						return this.$message({
							message: '请选择视频标签~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.StartDate) {
						return this.$message({
							message: '请选择上架时间~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.EndDate) {
						return this.$message({
							message: '请选择下架时间~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.FileList[0].FilePath) {
						return this.$message({
							message: '请上传视频~',
							type: 'warning',
							offset: 250
						})
					}
					console.log("------------------------")
					console.log("音频分类" + that.topNum)
					console.log("音频名称" + that.videoName)
					console.log("是否收费" + that.payPrice)
					console.log("收费金额" + that.money)
					console.log("图片路径" + that.imgArr)
					console.log("视频标签" + that.bry_comtitleList)
					console.log("上架时间" + that.StartDate)
					console.log("下架时间" + that.EndDate)
					console.log("是否推送" + that.bry_comwidNum)
					console.log("文件"+ JSON.stringify( that.FileList ) )
					console.log("------------------------")
					ajax("post","Articles/UserPublishDo", '{"ColId":"' + that.topNum + '","Title":"' 
					+ that.videoName + '","Details":"' + that.details + '","Contents":"' + that.content + '","ListPhoto":"'
					 + that.imgArr + '","StartDate":"' + that.StartDate + '","EndDate":"' + that.EndDate + '","Tags":"' + that.bry_comtitleList + '","UserId":"'
					  + foowwLocalStorage.getLocal("urseId") + '","IsPay":"' + that.payPrice + '","Price":"' + that.money + '","FileList":'+ JSON.stringify(that.FileList)  +'}',"123456").then(res => {
						   this.$message({
									message: '上传成功',
									type: 'success',
									offset:250
								});
								console.log(res)
								// setTimeout(_ => {
								// 	window.location.reload()
								// }, 1500)
					  }, err => {
						this.$message({
							message: '上传失败',
							type: 'warning',
							offset: 250
						})
					  })
				},
				startTime (e) {
					if(e < new Date() - 10000) {
						this.$message({
							message: '上架时间不能是以前~',
							type: 'warning',
							offset: 250
						})
						this.StartDate = ''
					}
				},
				endTime(e) {
					if(e < this.StartDate) {
						this.$message({
							message: '下架时间不能小于上架时间~',
							type: 'warning',
							offset: 250
						})
						this.EndDate = ''
					}
				}
      }
		})
	</script>

</html>
