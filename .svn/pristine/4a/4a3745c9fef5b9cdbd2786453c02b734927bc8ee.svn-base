.bry_main{
	width: 1010px;
	height: 700px;
	border-radius: 6px;
	background-color: #fff;
	margin: 54px 0 0 44px;
}

/* 弹出层 */
.bry_layer{
	position: fixed;
	top: 50%;
	left: 50%;
	width: 940px;
	height: 310px;
	margin-left:-470px;
	margin-top:-255px;
	border: 2px solid #1ca7c4;
	border-radius: 10px;
	background: rgba(255,255,255,0.8);
	padding: 40px 100px 0 62px;
	box-sizing: border-box;
}

.bry_success_pic{
	width: 50px;
	height: 50px;
	border-radius: 50%;
	/* float: left; */
}
.bry_success_pic>img{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
.bry_success_word{
	width: 700px;
	/* float: left; */
	margin-left: 20px;
}
.bry_success_word>span{
	display: block;
	color: #333333;
}
.bry_success_word>span:first-child{
	font-size: 18px;
	font-weight: bold;
}
.bry_success_word>span:last-child{
	font-size: 14px;
}


.choice {
	font-size: 18px;
	color: #FD9441;
	padding: 30px 0 30px 40px;
}

.shenqin{
	width: 240px;
	height:40px ;
	line-height: 40px;
	background-color: #fd9441;
	border-radius: 10px;
	margin-left: 258px;
	margin-top: 40px;
	font-size: 18px;
	color: #fff;
	outline: none;
	border: 1px solid #a0a0a0;
	cursor: pointer;
}
/* 去掉number的箭头 */

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
}
input[type="number"] {
    -moz-appearance: textfield;
}
.bry_count1{
	padding: 0 0 30px 100px;
	font-size: 14px;
}
.bry_count2{
	padding-left: 40px;
	font-size: 16px;
}
.bry_count2>input{
	width: 154px;
	height: 50px;
	border-radius: 6px;
	background-color: #EFEFEF;
	padding: 8px;
	box-sizing: border-box;
	border: 1px solid #9B9B9B;
	outline: none;
}
.bry_count2>span:nth-of-type(1){
	color: #FF7101;
	font-weight: 500;
}
.bry_count2>span:nth-of-type(2){
	color: #333;
}
.cost{
	padding: 20px 0 0 136px;
}
.cost>input{
	border-radius: 6px;
	border: 1px solid #999; 
}
.cost>input:nth-of-type(1){
	margin-right: 30px;
}
.text{
	padding: 80px 0 0 80px;
	font-size: 14px;
}


/* 支付弹出层 */
.bry_pay_layer{
	position: fixed;
	top: 0;
	left: 0;
	
	width: 100%;
	height: 100%;
	background:rgba(2,79,95,0.5);
	
}
.bry_QRcode_layer{
	position: fixed;
	top: 300px;
	left: 50%;
	transform:translate(-50%) ;
	width: 400px;
	height: 450px;
	background: #ffffff;
	border-radius: 6px;
}
.bry_QRcode_layer>img{
	width: 80%;
	height: 80%;
	margin-left: 10%;
	margin-top: 10px;
}
.bry_QRcode_layer>span{
	display: inline-block;
	width: 100%;
	text-align: center;
	font-size: 20px;
	color: #000000;
}