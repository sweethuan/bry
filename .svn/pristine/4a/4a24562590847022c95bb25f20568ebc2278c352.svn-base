body {
	width: 100%;
}

.inner {
	width: 1320px;
	margin: 0 auto;
}

.bry_header_nav {
	position: relative;
	z-index: 20;
	background-color: #017289;
	box-shadow: 0px 2px 2px rgba(0, 0, 0, .4);
}

.bry_header_nav .inner>li {
	position: relative;
	float: left;
	height: 60px;
	line-height: 60px;
	font-size: 24px;
	letter-spacing: 8px;
}

.bry_header_nav .inner>li>a {
	padding: 0 55px;
	color: white;
}

.bry_header_nav .inner>li:hover,
.nav_active {
	background-color: #003944;
}

.bry_header_nav ul li ul {
	position: absolute;
	display: none;
	width: 100%;
	line-height: 40px;
	font-size: 18px;
	letter-spacing: 0px;
	text-align: center;
	background-color: rgba(0, 0, 0, .5);
	z-index: 999;
	top: 60px;
}

.bry_header_nav ul li a {
	text-decoration: none;
	color: #fff;
}

.bry_header_nav .inner>li:hover ul {
	display: block;
}

.bry_header_nav .inner>li ul li:hover {
	background-color: rgba(1, 92, 110, .85);
}

.bry_header_wrap {
	position: relative;
	z-index: 1;
	height: 102px;
	/* line-height: 102px; 引入layui后该影响了关注*/
	background-color: #efefef;
	box-shadow: 0px 6px 2px rgba(0, 0, 0, .3);
}

.bry_header_wrap .bry_logo {
	padding-top: 16px;
	padding-left: 24px;
}

.bry_header_wrap .bry_logo img {
	width: 137px;
	height: 71px;
}

.bry_search {
	width: 438px;
	height: 44px;
	margin-top: 34px;
	margin-left: 390px;
	padding: 1px;
	background-color: #017289;
	border-radius: 22px;
	overflow: hidden;
	box-sizing: border-box;
}

.bry_search input {
	width: 69%;
	height: 100%;
	padding-left: 20px;
	background-color: #efefef;
	border: none;
	border-radius: 22px 0 0 22px;
	outline: none;
	color: #017289;
	font-size: 20px;
}

.bry_search input::placeholder {
	color: #017289;
	font-size: 20px;
}

.bry_search button {
	height: 100%;
	padding-right: 40px;
	background: transparent url(../../assets/icon/header/search.png) no-repeat right;
	border: none;
	outline: none;
	color: #dde7ea;
	font-size: 20px;
	margin-right: 12px;
	cursor: pointer;
}

.bry_header_share {
	height: 48px;
	margin-left: 28px;
	margin-top: 34px;
}

.bry_header_share li {
	margin-left: 20px;
	cursor: pointer;
}

.bry_header_share img {
	width: 30px;
	height: 30px;
	margin: 0 auto;
	border-radius: 50%;
}

.bry_header_share div {
	font-size: 14px;
	color: #333;
	line-height: 1;
	margin-top: 2px;
	text-align: center;
}

.bry_NickName {
	position: relative;
}

.bry_NickName>span {
	position: absolute;
	top: -36px;
	right: -2px;
	display: block;
	width: 20px;
	height: 20px;
	border-radius: 50%;
	background: #069fc1;
	color: #ffffff;
	text-align: center;
	line-height: 20px;
}



.sharepos{
	height: 24px;
	position: relative;
}

#WX {
	width: 231px;
	height: 285px;
	background: red;
	padding: 10px;
	background: #fff;
	border: solid 1px #d8d8d8;
	position: absolute;
	z-index: 50000;
	bottom: 24px;
	left: 50%;
	margin-left: -100px;
}

.bd_weixin_popup_head {
	font-size: 12px;
	font-weight: bold;
	text-align: left;
	line-height: 16px;
	height: 16px;
	position: absolute;
	color: #000;
}

.bd_weixin_popup_head span {
	font-size: 12px;
	font-weight: bold;
	text-align: left;
	line-height: 16px;
}

.bd_weixin_popup_close {
	width: 24px;
	height: 24px;
	text-decoration: none;
	font-size: 24px;
	text-align: center;
	line-height: 24px;
	color: #000000;
	position: absolute;
	right: 0;
	top: 0;
	cursor: pointer;
}

.bd_weixin_popup_foot {
	font-size: 12px;
	text-align: left;
	line-height: 22px;
	color: #666;
}

#weixin {
	width: 185px;
	height: auto;
	margin: 10px auto;
}
