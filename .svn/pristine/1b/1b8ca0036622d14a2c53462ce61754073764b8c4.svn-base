/* 视频封面 */
.bry_cover {
	margin-top: 10px;
	position: relative;
}

.bry_cover_img {
	width: 186px;
	height: 110px;
	box-sizing: border-box;
	border: 1px solid #c1c1c1;
	border-radius: 5px;
	background: white;
	margin-top: 8px;
}

.bry_cover_img>img {
	width: 100%;
	height: 100%;
}

.bry_cover_info {
	font-size: 12px;
	color: #666666;
	padding-top: 10px;
	padding-left: 16px;
	position: relative;
}

.bry_cover_info>p {
	padding-bottom: 3px;
}

.bry_cover_btn {
	position: absolute;
	bottom: -42px;
}


