.bry_main {
	width: 1088px;
	position: relative;
	padding-top: 54px;
}

/* 最上面的导航 */
.bry_topnav>a {
	font-size: 18px;
	color: #333333;
	margin-right: 20px;
}

.bry_topnav .bry_topnav_sel {
	color: #059fbf;
}

/* 共通的部分 */
.bry_comwid {
	width: 100%;
	box-sizing: border-box;
	padding-left: 92px;
	position: relative;
}

.bry_comtitle {
	position: absolute;
	right: 1002px;
	top: 9px;
	font-size: 14px;
	color: #333333;
}

.bry_comtitle_star::before {
	display: block;
	position: absolute;
	left: -10px;
	top: 0;
	content: "*";
	color: red;
}

/* 视频分类 */
.bry_classi {
	font-size: 14px;
	color: #333333;
	padding-top: 7px;
	margin-top: 16px;
}

.bry_classi ul>li {
	float: left;
	padding-right: 30px;
}

.bry_classi ul>li>label {
	vertical-align: middle;
}

.bry_classi ul>li input {
	margin-right: 4px;
	vertical-align: middle;
}

/* 视频名称 */
.bry_name {
	margin-top: 20px;
	padding-top: 4px;
}

.bry_name>input {
	width: 490px;
	height: 36px;
	box-sizing: border-box;
	border: 1px solid #c1c1c1;
	border-radius: 5px;
	outline: none;
	padding: 0 10px;
}

/* 是否收费 */
.bry_payno {
	margin-top: 10px;
	font-size: 14px;
	color: #333333;
}

.bry_payno>label {
	margin-right: 50px;
}

.bry_payno>label>input {
	vertical-align: middle;
	margin-right: 4px;
}

.bry_payno>input {
	width: 126px;
	height: 36px;
	box-sizing: border-box;
	border: 1px solid #c1c1c1;
	border-radius: 5px;
	margin-right: 5px;
	margin-top: 2px;
	text-align: center;
}

