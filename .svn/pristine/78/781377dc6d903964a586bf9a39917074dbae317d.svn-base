<script type="text/JavaScript" charset="UTF-8">
		var vueobj = new Vue({
			el: '#app',

			data() {
				return {
					isLoading: false,
					RoleId: '',     // 角色id
					topNav:[
					{ type: '新闻', typeId: 11 },
					{ type: '产业', typeId: 37 },
					{ type: '科技', typeId: 38 },
					{ type: '政策', typeId: 39 },
					{ type: '最新', typeId: 51 },
					{ type: '热门', typeId: 53 }],//类型列表
					topNum:'' , //类型判断数据
					audioName:"",//音频名称
					payMes:[{
						names: "否",
						isPay: false
					},{
						names: "是",
						isPay: true
					}], //判断是否收费信息
					payPrice:"false" ,//判断是否收费
					money:0 ,// 收费金额默认是0.00
					isDisabled:true, //判断disabled
					details:'',//简介
					content:'',//详情内容
					showImg:'', //图片展示
					imgArr:'', //图片路径
					bry_comtitle:[{
						names: "性科学史",
						namesId: 1
					},{
						names: "性生物学",
						namesId: 2
					},{
						names: "性社会学",
						namesId: 3
					},{
						names: "性心理学",
						namesId: 4
					},{
						names: "性健康教育",
						namesId: 5
					},{
						names: "法学伦理",
						namesId: 6
					}] , //视频标签
					bry_comtitleList:[]  ,//视频标签点击下标
					StartDate:"", //上架时间
					EndDate: "",  //下架时间
					// audioArr:"",  //音频文件
					bry_comwid:["否","推送"],
					bry_comwidNum:0,//是否推送的判断数据
					FileList:[{Title:'', //标题
					    FilePath :'', //文件路径
							Background:'', //背景图
						}],
					StartDate: '',
					EndDate: '',
					username: '',
					isAuth: '',  // 是否认证
				}
			},
			created() {
				this.RoleId = foowwLocalStorage.getLocal("RoleId")
				//请求基本资料
				getAjax("get","Users/DetailDo",'{"UserId":"' + foowwLocalStorage.getLocal("urseId") + '"}').then(res=>{
					this.username=res.data.NickName
					this.isAuth = res.data.IsAuth
					
				},err=>{
					console.log(err)
				})
			},
			computed: {
				comClass(){
					return this.RoleId == 1 ? "个人" : this.RoleId == 2 ? "学生" : this.RoleId == 3 ? "讲师" : this.RoleId == 4 ? "医师" : this.RoleId == 5 ? "心里资讯师" : "机构"
				}
			},
			mounted() {
				$('#summernote').summernote({
					lang: 'zh-CN',
					placeholder: '请输入内容',
					height: 470,
					disableDragAndDrop: true,
					shortcuts: false,
					tabDisable: false,
					toolbar: [
						['font',['bold','underline','strikethrough','superscript','subscript','clear']],
						['fontname',['fontsize']],
						['color',['forecolor','backcolor']],
						['misc',['undo','redo','help']]
					]
				});
			},
			methods: {
				// 编码
				htmlEncode(str) {
					var s = "";
					if (str.length == 0) return "";
					s = str.replace(/&/g, "&amp;");
					s = s.replace(/</g, "&lt;");
					s = s.replace(/>/g, "&gt;");
					s = s.replace(/ /g, "&nbsp;");
					s = s.replace(/\'/g, "&#39;");
					s = s.replace(/\"/g, "&quot;");
					return s;
				},
				// 上传之前的钩子 
				beforeAvatarUpload(file) {
					 const fileSuffix = file.name.substring(file.name.lastIndexOf(".") + 1);
					  const extension1 = fileSuffix === "pdf"
					  const extension2 = fileSuffix === "doc"
					  const extension3 = fileSuffix === "txt"
					  const extension4 = fileSuffix === "jpg"
					  const extension5 = fileSuffix === "png"
					  const extension6 = fileSuffix === "docx"
					 
					  if (!extension1 && !extension2 && !extension3 && !extension4 && !extension5 && !extension6) {
							$(".el-upload-list").remove()
							setTimeout(() => {
								window.location.reload()
							}, 1500)
							return this.$message({
								message: '上传文件只能是 PDF、word、TXT文件或jpg、png格式~',
								type: 'warning',
								offset: 250
							})
					  }
					this.isLoading = true
					return extension1 || extension2 || extension3 || extension4 || !extension5 || !extension6
				},
				// 上传成功的钩子
				onSuccess(response, file, fileList) {
					this.FileList[0].FilePath = response.data
					this.isLoading = false
				},
				onError (err) {
					console.log(err)
				},
				// 文件超出个数限制时的钩子 
				handleExceed(files, fileList) {
					this.$message.warning(`当前限制选择 1 个文件，本次选择了 ${files.length} 个文件，共选择了 ${files.length + fileList.length} 个文件`);
				},
				// 勾选上传类型
				checkType(index){
					let that=this
					that.topNum=that.topNav[index].typeId
				},
				// 判断是否收费
				payMoney(index){
					let that=this
					if (index==0) {
						that.money=0
						that.isDisabled = true
					}else {
						that.isDisabled = false
					}
				},
				// 上传图片
				getFile(event) {
					var file = event.target.files; //获取图片的所有信息
					let that = this;
					for (var i = 0; i < file.length; i++) {
						// 上传类型判断
						var imgName = file[i].name;
						var idx = imgName.lastIndexOf(".");
						if (idx != -1) {
							var ext = imgName.substr(idx + 1).toUpperCase();//获取图片格式
							ext = ext.toLowerCase();
							if (
								ext != "jpg" &&
								ext != "png" 
							) {
								return this.$message({
									message: '图片格式不支持~',
									type: 'warning',
									offset: 250
								})
								
							} else {
								that.imgArr = file[i];
								
							}
						} else {}
						//展示上传的图片
						let reader = new FileReader();
						
						reader.readAsDataURL(file[i]);
						
						reader.onload = function(e) {
							that.showImg=this.result
							console.log( this.result)
				      // 将图片转码的base64传入通用类接口  返回的图片地址传给imgArr
							ajax("post","Users/UploadPhotoByBase64Do",'{"base64":"' + this.result + '"}',"123456").then(res=>{
								that.imgArr=res.data
								//console.log(that.imgArr)
								},err=>{
								console.log(err)
								})
						};
					}
				},
				
				// 删除图片
				del() {
						this.showImg = ""
						this.imgArr = ""
						// this.$refs.picFile.value = ""
				},
				// 上架时间change 事件
				startTime (e) {
					if(e < new Date() - 10000) {
						this.$message({
							message: '上架时间不能是以前~',
							type: 'warning',
							offset: 250
						})
						this.StartDate = ''
					}
				},
				// 下架时间change 事件
				endTime(e) {
					if(!this.StartDate) {
						this.$message({
							message: '请先选择上架时间~',
							type: 'warning',
							offset: 250
						})
						this.EndDate = ''
					}else if(e < this.StartDate) {
						this.$message({
							message: '下架时间不能早于上架时间~',
							type: 'warning',
							offset: 250
						})
						this.EndDate = ''
					}
				},
				// 处理数据
				dealData (){
					let that=this
					
					// 处理时间
					var SD = new Date(that.StartDate); 
					var ED = new Date(that.EndDate);
				
					that.StartDate = SD.getFullYear() + '-' + (SD.getMonth() + 1) + '-' + SD.getDate() + ' ' + SD.getHours() + ':' + SD.getMinutes() + ':' + SD.getSeconds(); 
					that.EndDate = ED.getFullYear() + '-' + (ED.getMonth() + 1) + '-' + ED.getDate() + ' ' + ED.getHours() + ':' + ED.getMinutes() + ':' + ED.getSeconds(); 
					// 处理富文本数据
					this.content = this.htmlEncode($('#summernote').summernote('code'))
				},
				// 表单验证
				checkForm() {
					let that = this
					if(!this.topNum) {
						return this.$message({
							message: '请选择资讯分类~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.audioName.trim()) {
						return this.$message({
							message: '请填写标题~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.imgArr) {
						return this.$message({
							message: '请选择封面~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.details.trim()) {
						return this.$message({
							message: '请填写摘要~',
							type: 'warning',
							offset: 250
						})
					}else if(!$($('#summernote').summernote('code')).text().trim()) {
						return this.$message({
							message: '请填写内容~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.bry_comtitleList.length) {
						return this.$message({
							message: '请选择标签~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.StartDate) {
						return this.$message({
							message: '请选择上架时间~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.EndDate) {
						return this.$message({
							message: '请选择下架时间~',
							type: 'warning',
							offset: 250
						})
					}else if(!this.FileList[0].FilePath) {
						return this.$message({
							message: '请上传文件~',
							type: 'warning',
							offset: 250
						})
					}
					// console.log("------------------------")
					// console.log("音频分类" + that.topNum)
					// console.log("音频名称" + that.audioName)
					// console.log("是否收费" + that.payPrice)
					// console.log("收费金额" + that.money)
					// console.log("图片路径" + that.imgArr)
					// console.log("视频标签" + that.bry_comtitleList)
					// console.log("上架时间" + that.StartDate)
					// console.log("下架时间" + that.EndDate)
					// console.log("是否推送" + that.bry_comwidNum)
					// console.log("文件"+ JSON.stringify( that.FileList ) )
					// console.log("------------------------")
					ajax("post","Articles/UserPublishNewDo", '{"ColId":"' + that.topNum + '","Title":"' 
					+ that.audioName + '","Details":"' + that.details + '","Contents":"' + that.content + '","ListPhoto":"'
					 + that.imgArr + '","Tags":"' + that.bry_comtitleList + '","UserId":"'
					  + foowwLocalStorage.getLocal("urseId") + '","FileList":'+ JSON.stringify(that.FileList)  +'}',"123456").then(res => {
						   this.$message({
									message: '上传成功',
									type: 'success',
									offset:250
								});
							setTimeout(() => {
								window.location.reload()	
							}, 1500);
							
					  }, err => {
						this.$message({
							message: '上传失败',
							type: 'warning',
							offset: 250
						})
					  })
				},
				//上传数据
				uploadData(){
					this.dealData()
					this.checkForm()
				},
				
			}
		});
	</script>

